<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/darkest_gray"
    android:id="@+id/layoutSongItem"
    >

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/iwSongIcon"
        android:src="@drawable/music_icon2"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvMusicTitle"
        android:layout_toEndOf="@id/iwSongIcon"
        tools:text="Music"
        android:textColor="@color/white"
        android:padding="10dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_centerVertical="true"
        android:scrollHorizontally="true"
        android:singleLine="true">
        </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMusicDuration"
        android:layout_toEndOf="@id/tvMusicTitle"
        tools:text="05:00"
        android:textColor="@color/white"
        android:padding="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        tools:ignore="RelativeOverlap" />

    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:id="@+id/btnDeleteMusic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:text="@string/delete"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:ignore="SmallSp" />
    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:id="@+id/btnSendMusic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/teal_700"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:text="@string/send"

        />


</RelativeLayout>